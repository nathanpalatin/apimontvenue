{
  "version": 2,
  "builds": [
    {
      "src": "src/server.ts",
      "use": "@vercel/node",
      "env": {
        "PRISMA_GENERATE": "true"
      },
      "config": {
        "includeFiles": [
          "node_modules/.prisma/**"
        ]
      }
    }
  ],
  "hooks": {
    "prebuild": "npm run prisma:generate"
  },
  "routes": [
    {
      "src": "(.*)",
      "dest": "src/server.ts"
    }
  ]
}